<configuration>
    
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <logger name="io.github.wj9806.jrest" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="io.github.wj9806.jrest.client" level="INFO"/>

</configuration>